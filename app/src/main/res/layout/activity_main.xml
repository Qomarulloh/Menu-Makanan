<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:background="@color/coklatMuda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="4dp">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/wabar"
            android:layout_gravity="center_horizontal"/>

        <TextView
            style="@style/StyleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:text="Rumah Makan Kitchen House" />

        <TextView
            style="@style/StyleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/aladin"
            android:text="Menu Makanan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_Ng"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amita"
                    android:text="Nasi Goreng (Rp. 15.000,-)"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_Ng"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_Mg"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amita"
                    android:text="Mie Goreng (Rp. 12.000,-)"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_Mg"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_Abn"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amita"
                    android:text="Ayam Bakar + Nasi (Rp. 16.000,-)"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_Abn"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_Agn"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amita"
                    android:text="Ayam Goreng + Nasi (Rp. 15.000,-)"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_Agn"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            style="@style/StyleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/aladin"
            android:text="Menu Minuman" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_Tm"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amita"
                    android:text="Teh Manis Panas/Dingin (Rp. 5.000,-)"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_Tm"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_Am250"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amita"
                    android:text="Air Mineral 250ml (Rp. 1.000,-)"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_Am250"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_Am600"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amita"
                    android:text="Air Mineral 600ml (Rp. 4.000,-)"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_Am600"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_Aj"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amita"
                    android:text="Air Jetuk Panas/Dingin (Rp. 6.000,-)"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_Aj"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_hitung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Hitung"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:text="Total Harga Makanan :"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_totalMak"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:text="Total Harga Makanan :"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_totalMin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/StyleText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:text="Total :" />
            <TextView
                android:id="@+id/tv_totalSel"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            style="@style/StyleText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"
            android:text="Uang Bayar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_ub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number|numberDecimal"
                android:gravity="right"
                android:layout_weight="1"
                android:hint="0"/>

            <Button
                android:id="@+id/btn_byr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text="Bayar"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>