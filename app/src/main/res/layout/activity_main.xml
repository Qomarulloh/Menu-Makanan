<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView13" />

    <CheckBox
        android:id="@+id/cb_airMineral600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/aladin"
        android:text="Air Mineral 600ml (Rp. 4.000,-)"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/cb_airJeruk"
        app:layout_constraintStart_toStartOf="@+id/cb_airMineral250"
        app:layout_constraintTop_toBottomOf="@+id/cb_airMineral250" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Selamat Datang Di Cafe dan Resto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/wabar" />

    <TextView
        android:id="@+id/textView2"
        style="@style/styleJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Cafe dan Resto Warung Barokah"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <CheckBox
        android:id="@+id/cb_nasiGoreng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/aladin"
        android:text="Nasi Goreng (Rp. 15.000,-)"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/cb_mieGoreng"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <CheckBox
        android:id="@+id/cb_ayamBakar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/aladin"
        android:text="Ayam Bakar + Nasi (Rp. 16.000,-)"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/cb_ayamGoreng"
        app:layout_constraintStart_toStartOf="@+id/cb_mieGoreng"
        app:layout_constraintTop_toBottomOf="@+id/cb_mieGoreng" />

    <EditText
        android:id="@+id/et_mieGoreng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/et_ayamBakar"
        app:layout_constraintStart_toStartOf="@+id/et_nasiGoreng"
        app:layout_constraintTop_toBottomOf="@+id/et_nasiGoreng" />

    <EditText
        android:id="@+id/et_ayamGoreng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/cb_ayamGoreng"
        app:layout_constraintStart_toStartOf="@+id/et_ayamBakar" />

    <EditText
        android:id="@+id/et_ayamBakar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/et_ayamGoreng"
        app:layout_constraintStart_toStartOf="@+id/et_mieGoreng"
        app:layout_constraintTop_toBottomOf="@+id/et_mieGoreng" />

    <EditText
        android:id="@+id/et_nasiGoreng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/cb_nasiGoreng"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/cb_ayamGoreng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/aladin"
        android:text="Ayam Goreng + Nasi (Rp. 16.000,-)"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/cb_ayamBakar"
        app:layout_constraintTop_toBottomOf="@+id/cb_ayamBakar" />

    <CheckBox
        android:id="@+id/cb_mieGoreng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/aladin"
        android:text="Mie Goreng (Rp. 12.000,-)"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/cb_ayamBakar"
        app:layout_constraintStart_toStartOf="@+id/cb_nasiGoreng"
        app:layout_constraintTop_toBottomOf="@+id/cb_nasiGoreng" />

    <TextView
        android:id="@+id/textView4"
        style="@style/styleJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Makanan"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView5"
        style="@style/styleJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Makanan"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_ayamGoreng" />

    <CheckBox
        android:id="@+id/cb_tehManis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/aladin"
        android:text="Teh Manis Panas/Dingin (Rp. 5.000,-)"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/cb_airMineral250"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <CheckBox
        android:id="@+id/cb_airMineral250"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/aladin"
        android:text="Air Mineral 250ml (Rp. 1.000,-)"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/cb_airMineral600"
        app:layout_constraintStart_toStartOf="@+id/cb_tehManis"
        app:layout_constraintTop_toBottomOf="@+id/cb_tehManis" />

    <CheckBox
        android:id="@+id/cb_airJeruk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/aladin"
        android:text="Air Jeruk Panas/Dingin (Rp. 6.000,-)"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/cb_airMineral600"
        app:layout_constraintTop_toBottomOf="@+id/cb_airMineral600" />

    <EditText
        android:id="@+id/et_airJeruk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/cb_airJeruk"
        app:layout_constraintBottom_toBottomOf="@+id/cb_airJeruk"
        app:layout_constraintStart_toStartOf="@+id/et_airMineral600" />

    <EditText
        android:id="@+id/et_airMineral600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/et_airJeruk"
        app:layout_constraintStart_toStartOf="@+id/et_airMineral250"
        app:layout_constraintTop_toBottomOf="@+id/et_airMineral250" />

    <EditText
        android:id="@+id/et_airMineral250"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/et_airMineral600"
        app:layout_constraintStart_toStartOf="@+id/et_tehManis"
        app:layout_constraintTop_toBottomOf="@+id/et_tehManis" />

    <EditText
        android:id="@+id/et_tehManis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/cb_tehManis"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_bayar"
        android:layout_width="73dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Bayar"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/btn_hitung"
        android:layout_width="73dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="Hitung"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_airJeruk" />

    <TextView
        android:id="@+id/textView6"
        style="@style/styleJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Total Makanan"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_hitung" />

    <TextView
        android:id="@+id/textView7"
        style="@style/styleJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Total Minuman"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        style="@style/styleJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Total"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        style="@style/styleJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView11"
        style="@style/styleJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView10"
        style="@style/styleJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text=":"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <EditText
        android:id="@+id/et_uangBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_bayar"
        app:layout_constraintEnd_toStartOf="@+id/btn_bayar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="right"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aladin"
        android:text="by: Muahamad Qomarulloh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>